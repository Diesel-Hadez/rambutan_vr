<div class="container">
  <h1 class="text-center"> <%= yield(:form_title)%> </h1>
<%= form_for(@user, url: yield(:submit_url)) do |f| %>
  <div class="form-group">
  <%= f.label :name, class: 'form-text' %>
  <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :dob, class: 'form-text' %>
  <%= f.date_field :dob, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :address, class: 'form-text' %>
  <%= f.text_area :address, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :email, class: 'form-text' %>
  <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :phone_number, class: 'form-text' %>
  <%= f.telephone_field :phone_number, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :password, class: 'form-text' %>
  <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :password_confirmation, "Confirm Password", class: 'form-text' %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>
  </div>
  <% #TO-DO: Add admin-check to add new users with admin capabilities %>

  <%= f.submit yield(:submit_text) , class: "btn btn-lg btn-block btn-primary" %>

<% end %>
</div>
