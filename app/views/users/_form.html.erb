<%= form_for(@user, url: yield(:submit_url)) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :dob %>
  <%= f.date_field :dob %>

  <%= f.label :address %>
  <%= f.text_area :address%>

  <%= f.label :email%>
  <%= f.email_field :email%>

  <%= f.label :phone_number %>
  <%= f.telephone_field :phone_number %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <% #TO-DO: Add admin-check to add new users with admin capabilities %>

  <%= f.submit yield(:submit_text) %>

<% end %>
