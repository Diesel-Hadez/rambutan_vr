<p id="notice"><%= notice %></p>
<h1 class="text-center">List of Users</h1>
<% @users.each do |user| %>
<div class="card mb-3 movie" style="max-width: 48rem;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= image_tag "ugly_person.svg", class: "card-img-top", alt: "DVD Image" %>
    </div>
    <div class="col-md-8">
    <div class="card-body">
      <h5 class="card-title"><%= link_to user.name, user_path(user) %></h5>
      <p class="card-text"><ol>
        <li>  <%= user.email %> </li>
        <li>  <%= user.dob %> </li>
      </ol></p>
    </div>
    </div>
  </div>
</div>
<% end %>
