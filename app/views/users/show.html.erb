<% provide(:title, @user.name) %>
<%= stylesheet_link_tag "users" %>
<div class="row">
  <%= render 'profilesidebar' %>
  <nav class="col-md-9 ml-sm-auto col-lg-10 px-4 profile-container" role="main">
    <div class="card mb-3"> 
      <div class="card-body">
        <h1><%= @user.name %></h1>
        <ul>
          <li> <%= @user.name %> </li>
          <li> <%= @user.dob %> </li>
          <li> <%= @user.address %> </li>
          <li> <%= @user.email %> </li>
          <li> <%= @user.phone_number %> </li>

          <% #TO-DO, add pending borrows, more info for admins %>

          <li>Created at: <%= @user.created_at %> </li>
          <li>Last updated at: <%= @user.updated_at %> </li>
        </ul>
      </div>
    </div>
  </nav>
</div>
