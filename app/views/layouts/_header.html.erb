<header>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="<%= root_url %>">RambutanVR</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
              </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
          <li class="nav-item"><%= link_to "Movies", movies_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Actors", actors_path, class: "nav-link" %></li>
        <% if logged_in? %>
          <li class="nav-item"><%= link_to "Profile", current_user, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Transactions", item_transactions_path, class: "nav-link" %></li>
        <% end %>
      </ul>    
      <ul class="navbar-nav ml-auto">
      <% if logged_in? %>
          <li class="nav-item"><%= link_to "Log out", logout_path, method: :delete, class: "nav-link" %></li>
        <% else %>
          <li class="nav-item"><%= link_to "Log in", login_path, class: "nav-link" %></li>
      <% end %>
      </ul>
    </div>
  </nav>
</header>
