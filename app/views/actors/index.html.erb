<p id="notice"><%= notice %></p>

<h1 class="text-center" >Actors</h1>
<% if is_admin? %>
  <div class="container">
    <%= link_to 'New Actor', new_actor_path, style: "max-width: 48rem; margin: auto;", class: "btn btn-lg btn-block mb-3 btn-primary" %>
  </div>
<% end %>

<% @actors.each do |actor| %>

<div class="card mb-3 movie" style="max-width: 48rem;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%= image_tag "ugly_person.svg", class: "card-img-top", alt: "Actor Image" %>
    </div>
    <div class="col-md-8">
    <div class="card-body">
      <h5 class="card-title"><%= actor.name %></h5>
    </div>
    <div class="card-body">
      <%= link_to "View Actor", actor, class: "card-link" %>
      <% if is_admin? %>
        <%= link_to "Edit Actor", edit_actor_path(actor), class: "card-link" %>
        <%= link_to "Delete Actor", actor,method: :delete, class: "card-link", data: { confirm: "Are you sure?" } %>
      <% end %>
    </div>
    </div>
  </div>
</div>
<% end %>

